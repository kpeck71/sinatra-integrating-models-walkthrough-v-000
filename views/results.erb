<h1>Your Text Analysis</h1>
  <%=@analyzed_text.to_s %>
<h2>Number of Words: </h2>
  <%=@analyzed_text.count_of_words %>

<h2>Vowels: <%=@analyzed_text.count_of_vowels %> </h2>

<h2>Consonants: <%= @analyzed_text.count_of_consonants %> </h2>

<%@analyzed_text.most_used_letter |letter,count| %>
<%  @most_used = letter %>
<%  @count = count %>
<% end%>

<h2>Most Common Letter: <%=@most_used %> used <%=@count %> times</h2>
